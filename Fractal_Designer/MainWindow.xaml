<Window x:Class="Fractal_Designer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fractal_Designer"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1500" SizeChanged="Window_SizeChanged" MouseWheel="Window_MouseWheel" Closing="Window_Closing" WindowStartupLocation="CenterScreen" UseLayoutRounding="True">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- what if it were a canvas? -->
        <!--wouldn't it be nice to compare side by side?-->
        <Image Grid.Row="0" Name="Fractal" Stretch="UniformToFill" MouseDown="Fractal_MouseDown" MouseMove="Fractal_MouseMove" MouseLeave="Fractal_MouseLeave" Cursor="Cross">
            <Image.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Settings" Click="OpenSettings"/>
                    <MenuItem Header="Exit" Click="Exit"/>
                </ContextMenu>
            </Image.ContextMenu>
        </Image>

        <StatusBar Grid.Row="1">
            <TextBlock Name="Status"/>
        </StatusBar>
    </Grid>
</Window>
